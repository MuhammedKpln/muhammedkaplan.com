---
import { getCollection } from "astro:content";

const posts = await getCollection("blog");

console.log(posts);
---

<div class="grid lg:grid-cols-2 gap-3 lg:gap-5">
  {
    posts.map((post) => (
      <a
        class="border border-white/20 flex items-center gap-x-4 transition-colors hover:border-white/40 p-6 rounded-md group"
        href={`${post.collection}/${post.slug}`}
      >
        <div>
          <h2 class="text-lg lg:text-2xl line-clamp-2 font-semibold transition-colors group-hover:text-white text-gray-300 mb-2">
            {post.data.title}
          </h2>
          <time class="text-xs lg:text-sm text-gray-500 flex items-center gap-x-2 mt-auto">
            <svg
              stroke="currentColor"
              fill="currentColor"
              stroke-width="0"
              viewBox="0 0 1024 1024"
              height="13"
              width="13"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path d="M880 184H712v-64c0-4.4-3.6-8-8-8h-56c-4.4 0-8 3.6-8 8v64H384v-64c0-4.4-3.6-8-8-8h-56c-4.4 0-8 3.6-8 8v64H144c-17.7 0-32 14.3-32 32v664c0 17.7 14.3 32 32 32h736c17.7 0 32-14.3 32-32V216c0-17.7-14.3-32-32-32zm-40 656H184V460h656v380zM184 392V256h128v48c0 4.4 3.6 8 8 8h56c4.4 0 8-3.6 8-8v-48h256v48c0 4.4 3.6 8 8 8h56c4.4 0 8-3.6 8-8v-48h128v136H184z" />
            </svg>
            11 Temmuz 2023
          </time>
        </div>
      </a>
    ))
  }
</div>
