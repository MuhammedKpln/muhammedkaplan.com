---
import { fetchBookmarks } from "src/services/bookmarks.service";

const bookmarks = await fetchBookmarks(5);
---

<section class="mb-10">
  <h2 class="text-lg lg:text-3xl font-bold mb-6">Bookmarks</h2>
  <div class="grid lg:grid-cols-2 gap-3 lg:gap-5">
    {
      bookmarks.documents.map((bookmark) => {
        return (
          <a
            href={bookmark.href}
            class="text-[13px] lg:text-lg grid py-1.5 px-4 transition-colors group hover:text-blue-300 hover:bg-blue-300/10 rounded-md"
          >
            {bookmark.title}
            <p class="text-xs mt-1 lg:mt-0 lg:text-base text-gray-500">
              {bookmark.description}
            </p>
          </a>
        );
      })
    }
  </div>
  <a
    class="text-sm lg:text-lg underline decoration-blue-300 px-4 mt-12"
    href="/bookmarks">All bookmarks</a
  >
</section>
