---
import type { CollectionEntry } from "astro:content";
import Card from "./Card.astro";

interface Props {
  name: string;
  projects: CollectionEntry<"projects">[];
}

const { projects, name } = Astro.props;
---

<div class="flex flex-col">
  <div id="header" class="flex items-center gap-3 mb-10">
    <h1>{name}</h1>
    <span
      class="bg-gray-700 rounded-full w-6 h-6 text-xs flex justify-center items-center"
    >
      {projects.length}
    </span>
  </div>

  <div id="items" class="flex flex-col gap-5">
    {projects.map((project) => <Card project={project} />)}
  </div>
</div>
