---
import "@assets/css/main.css";
import ProfileImage from "@assets/profile.jpg";
import { Image } from "astro:assets";
import { ViewTransitions, fade } from "astro:transitions";
import CvHeader from "../components/Header/CvHeader";
---

<html>
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>Muhammed Kaplan - Webbdagbok</title>

    <ViewTransitions />
    <script
      defer
      data-domain="muhammedkaplan.com"
      src="https://analytics.hasanisabbah.duckdns.org/js/script.js"></script>
  </head>
  <body>
    <div class="flex flex-col min-h-full" transition:animate={fade()}>
      <div class="container mx-auto">
        {/* @ts-ignore */}
        <CvHeader client:idle>
          <Image
            slot="profile-image"
            class="w-16 h-16 lg:h-24 lg:w-24 bg-white/10 rounded-full border border-white/20"
            src={ProfileImage}
            alt="qwe"
          />
        </CvHeader>

        <div class="flex mt-10">
          <div>
            <slot name="body" />
          </div>
          <div class="w-1/2">
            <slot name="sidebar" />
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
